// Simulated async function that fetches a user
function fetchUser(userId, callback) {
  setTimeout(() => {
    callback(null, { id: userId, name: `User${userId}` });
  }, Math.random() * 1000);
}

// Convert fetchUser to return a Promise
function fetchUserPromise(userId) {
  return new Promise((resolve, reject) => {
    fetchUser(userId, (err, user) => {
      if (err) {
        reject(err);
      } else {
        resolve(user);
      }
    });
  });
}

// Converted from nested callbacks to async/await with Promise.all
async function fetchMultipleUsers(userIds) {
  try {
    const users = await Promise.all(
      userIds.map(userId => fetchUserPromise(userId))
    );
    return users;
  } catch (error) {
    throw error;
  }
}

// Usage example
fetchMultipleUsers([1, 2, 3, 4, 5])
  .then(users => {
    console.log('All users fetched:', users);
  })
  .catch(error => {
    console.error('Error fetching users:', error);
  });